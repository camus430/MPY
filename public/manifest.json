{
  "name": "Mon Petit YouTube",
  "short_name": "YouTube",
  "description": "Une application YouTube personnalisée avec lecture en arrière-plan",
  "start_url": "/",
  "display": "standalone",
  "background_color": "#000000",
  "theme_color": "#ff0000",
  "orientation": "portrait-primary",
  "scope": "/",
  "icons": [
    {
      "src": "/favicon.ico",
      "sizes": "48x48 32x32 16x16",
      "type": "image/x-icon"
    },
    {
      "src": "/placeholder.svg",
      "sizes": "192x192",
      "type": "image/svg+xml",
      "purpose": "any maskable"
    },
    {
      "src": "/placeholder.svg", 
      "sizes": "512x512",
      "type": "image/svg+xml",
      "purpose": "any maskable"
    }
  ],
  "categories": ["entertainment", "music", "multimedia"],
  "shortcuts": [
    {
      "name": "Accueil",
      "url": "/",
      "description": "Voir toutes les vidéos"
    },
    {
      "name": "Téléchargements",
      "url": "/downloads",
      "description": "Mes vidéos sauvegardées"
    }
  ],
  "permissions": [
    "background-sync",
    "background-fetch"
  ],
  "prefer_related_applications": false
}